
@if (!string.IsNullOrEmpty(User.Identity.Name))
{
    @section Special
    {
        <li>@Html.ActionLink("Profile", "Profiles", "Home")</li>
        <li>@Html.ActionLink("AllUsers", "GetUsers", "Home")</li>
        <li>@Html.ActionLink("LogOut", "Logout", "Home")</li>
    }
    @section Extra
                {
          <li class="dropdown"><a href="#"><span>Actions</span> <i class="bi bi-chevron-down"></i></a>
            <ul>
               <li class="nav-tabs">@Html.ActionLink("Post A Question", "Add", "Question")</li>
               <li class="nav-tabs">@Html.ActionLink("View Questions", "Index", "Question")</li>
            </ul>
          </li>
    }
    <div class="row gy-4 mt-5 justify-content-center" data-aos="fade-up" data-aos-delay="250">
        <h1>Hello @User.Identity.Name</h1>
        <p class="lead">Welcome to <b class="text-bold">Mindflow</b>.</p>
        <p><a href="~/home/chat" class="btn btn-primary btn-lg">Enter the Chat</a></p>
    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="icon-box">
            <h2>Getting started</h2>
            <p>
                Find the best answer to your technical question, help others answer theirs
            </p>
            <p><a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkId=301865">Join The Community</a></p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="icon-box">
            <h2>Businees Solution</h2>
            <p>Want a secure, private space for your technical knowledge?</p>
            <p><a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkId=301866">For Large Organization</a></p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="icon-box">
            <h2>Learners Platform</h2>
            <p>Want to Work on Small Projects and Get Effective Collaboration.</p>
            <p><a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkId=301867">For Small Team</a></p>
            </div>
        </div>
    </div>

}
else
{
    <section id="hero" class="d-flex align-items-center justify-content-center">
    <div class="container" data-aos="fade-up">

      <div class="row justify-content-center" data-aos="fade-up" data-aos-delay="150">
        <div class="col-xl-6 col-lg-8">
          <h1>Powerful Digital Solutions on MindFlow<span>.</span></h1>
          <h2>We are team of talented developers</h2>
        </div>
      </div>

      <div class="row gy-4 mt-5 justify-content-center" data-aos="zoom-in" data-aos-delay="250">
        <div class="col-xl-2 col-md-4">
          <div class="icon-box">
            <i class="ri-store-line"></i>
            <h3><a href="">Products</a></h3>
          </div>
        </div>
        <div class="col-xl-2 col-md-4">
          <div class="icon-box">
            <i class="ri-bar-chart-box-line"></i>
            <h3><a href="">Stats</a></h3>
          </div>
        </div>
        <div class="col-xl-2 col-md-4">
          <div class="icon-box">
            <i class="ri-paint-brush-line"></i>
            <h3><a href="">Pesonlize</a></h3>
          </div>
        </div>
        <div class="col-xl-2 col-md-4">
          <div class="icon-box">
            <i class="ri-database-2-line"></i>
            <h3><a href="">Server</a></h3>
          </div>
        </div>
      </div>
      <br></br>
      <div class="swiper-slide">
          <div class="icon-box">
              <a href="~/HOME/LOGIN">LOGIN TO SEE MORE</a>
          </div>
      </div>

    </div>
  </section><!-- End Hero -->
    @section Special
                    {
        <li>@Html.ActionLink("Login", "Login", "Home")</li>
        <li>@Html.ActionLink("Signup", "Register", "Home")</li>
    }
}


