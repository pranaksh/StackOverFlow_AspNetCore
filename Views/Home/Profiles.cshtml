@model StackOverFlowData.Models.User
@{
    ViewBag.Title = "MyProfile";
}
 <section id="hero" class="d-flex align-items-center ">
    <div class="container" data-aos="fade-up">
    <div class="align-content-xl-center">
        <div class="icon-box border-0">
            @if(@Model.UPhoto!=null)
            {<img width="200" src="data:image/jpeg;base64,@Convert.ToBase64String(Model.UPhoto)"/>}
        </div>
    </div>
        <div class="align-content-xl-center">
        <div class="icon-box">
            <h2>@Model.UName</h2>
        </div>
    </div>
        <div class="align-content-xl-center">
        <div class="icon-box">
            <i class="ri-store-line"></i>
            <h2>@Model.UEmail</h2>
        </div>
    </div>
        <div class="align-content-xl-center">
        <div class="icon-box">
            <h2>@Model.UMobile</h2>
        </div>
    </div>
    </div>
</div>
<a href=/Home/Edit/@Model.UId>Edit Profile</a>
<div class="col-md-12">
    <div class="col-lg-12">
        <h3>Questions by You</h3>
            <ul class="list-group">
                @foreach(var i in ViewBag.questions )
                {
                    if(i.UserUId == ViewBag.User.UId)
                    {<li class="list-group-item">@i.QQuestion</li>}
                }
            </ul>
    </div>
</div>


<a href="/home/index">Back</a>
